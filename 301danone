#!/usr/bin/env python2.7
# -*- coding: utf-8 -*-

import sys
from math import *

count_quick_sort = 0

def     affichage(size):
   s = str(size) + " éléments"
   print s

def     checkArgs(mylist):
   i = 0
   while (i != len(mylist)):
      try :
         mylist[i] = float(mylist[i])
         i += 1
      except:
         return -1
   return 0

def     tri_selection(mylist, size):
   tmplist = mylist
   cpt = 1
   for i in range(1, size - 1):
      mini = i
      cpt += 1
      for j in range(i + 1, size):
         if (tmplist[j] < tmplist[mini]):
            mini = j
         cpt += 1
      if (mini != i):
         tmp = tmplist[mini]
         mylist[mini] = tmplist[i]
         mylist[i] = tmp
   print "tri par sélection :",cpt, "comparaisons" 
   print mylist

def     tri_insertion(mylist, size):
   tmplist = mylist
   print (tmplist)
   count = 1
   for i in range(1, size, 1):
      x = tmplist[i]
      j = i
      while j > 0 and tmplist[j - 1] > x:
         tmplist[j] = tmplist[j - 1]
         j -= 1
         count += 1
      tmplist[j] = x
   print "tri par insertion :", count, "comparaisons"
   print mylist

def     tri_a_bulles(mylist, size):
   tmplist = mylist
   n = size
   count = 0
   for i in range (n - 1, 0, -1):
      for j in range(0, i, 1):
         if tmplist[j] > tmplist[j + 1]:
            tmp = mylist[j]
            tmplist[j] = tmplist[j + 1]
            tmplist[j+1] = tmp
         count += 1
   print "tri a bulles :", count, "comparaisons"
   print mylist

def     tri_rapide(mylist, first, last):
   global count_quick_sort
   count_quick_sort += 1
   if (first < last):
      pivot = (last - first) / 2
      pivot = int(pivot)
      tmp = mylist[pivot]
      mylist[pivot] = mylist[last]
      mylist[last] = tmp
      count_quick_sort += 1
      j = first
      for i in range(first, last - 1):
         count_quick_sort += 1
         if (mylist[i] <= mylist[last]):
            tmp = mylist[i]
            mylist[i] = mylist[j]
            mylist[j] = tmp
            j += 1
      tmp = mylist[last]
      mylist[last] = mylist[j]
      mylist[j] = tmp
      pivot = j
      tri_rapide(mylist, first, pivot - 1)
      tri_rapide(mylist, pivot + 1, last)

def	main():
   try:
      file = open(sys.argv[1])
   except:
      return -1
   tmp = file.read()
   mylist = tmp.split(' ')
   size = len(mylist)
   if checkArgs(mylist) == 0:
      affichage(size)
      tri_selection(mylist, size)
      tri_insertion(mylist, size)
      tri_a_bulles(mylist, size)
      tri_rapide(mylist, 0, len(mylist) - 1)
      print "tri rapide :", count_quick_sort, "comparaisons"

if __name__ == '__main__':
   sys.exit(main())
