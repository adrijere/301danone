#!/usr/bin/env python2.7
# -*- coding: utf-8 -*-

import sys
from math import *

def     affichage(size):
   s = str(size) + " éléments"
   print s

def     checkArgs(mylist):
   i = 0
   while (i != len(mylist)):
      try :
         float(mylist[i])
         i += 1
      except:
         return -1
   return 0

def	main():
   file = open(sys.argv[1])
   tmp = file.read()
   mylist = tmp.split(' ')
   size = len(mylist)
   if checkArgs(mylist) == 0:
      affichage(size)

if __name__ == '__main__':
   sys.exit(main())
